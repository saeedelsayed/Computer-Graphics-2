#version 150

uniform float depth_value = 0.0;

const vec4 corners[4] = vec4[4](
	vec4(-1.0, -1.0, 0.0, 1.0),
	vec4( 1.0, -1.0, 0.0, 1.0),
	vec4(-1.0,  1.0, 0.0, 1.0),
	vec4( 1.0,  1.0, 0.0, 1.0)
);

out vec2 texcoord_fs;

void main()
{
	vec4 corner = corners[gl_VertexID];
	corner[2] = depth_value;
	texcoord_fs = 0.5 * corner.xy + 0.5;
	gl_Position = corner;
}
